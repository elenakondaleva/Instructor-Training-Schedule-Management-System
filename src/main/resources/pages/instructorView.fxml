<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mint.training.controller.layout.InstructorViewController">
    <AnchorPane>
        <children>
            <VBox spacing="10" alignment="CENTER">
                <Label text="Please choose an Instructor:" />
                <ComboBox fx:id="instructorComboBox"/>
            </VBox>
        </children>
    </AnchorPane>
    <HBox alignment="CENTER" spacing="10">
        <VBox spacing="10" maxWidth="300">
            <Label text="First Name:" />
            <Label text="Last Name:" />
            <Label text="Birthday:" />
        </VBox>
        <VBox spacing="10" maxWidth="200">
            <Label fx:id="firstNameLabel" maxWidth="200" />
            <Label fx:id="lastNameLabel" maxWidth="200" />
            <Label fx:id="birthdayLabel" />
        </VBox>
    </HBox>
</VBox>
